
PRT Enter the number of lines:
SCN $N

MOV $I 0
MOV $SCOUNT 1
MOV $M $N

> $OUTER
IF LSS $I $N
[
    MOV $J 1

    > $SPACES
    IF LSS $J $M
    [
        SPC

        ADD $J $J 1
        JMP $SPACES
    ]

    MOV $K 1

    > $STARS
    IF LEQ $K $SCOUNT
    [
        PRT *

        ADD $K $K 1
        JMP $STARS
    ]

    ENDL
    ADD $I $I 1
    ADD $SCOUNT $SCOUNT 2
    SUB $M $M 1
    JMP $OUTER
]

